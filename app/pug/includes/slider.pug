.slider
  .container
    .slider__wrap
      .swiper.slider-js
        .swiper-wrapper
          each slide in [1,2,3]
            .swiper-slide
              .slider__slide 
                .slider__img
                  img(src="images/dist/slider"+slide+".webp", alt="")
        .swiper-pagination 

    .slider__nav.d-flex.align-center.justify-between
      .slider__nav-btn.prev-btn
        .icon
          svg(width='18' height='14' viewBox='0 0 18 14' fill='none' xmlns='http://www.w3.org/2000/svg')
            path(d='M16.5 7H1M1 7L7 1M1 7L7 13' stroke='white' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')

      .slider__nav-btn.next-btn
        .icon
          svg(width='18' height='14' viewBox='0 0 18 14' fill='none' xmlns='http://www.w3.org/2000/svg')
            path(d='M1.5 7H17M17 7L11 1M17 7L11 13' stroke='white' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
